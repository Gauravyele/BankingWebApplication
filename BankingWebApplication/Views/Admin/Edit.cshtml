@model EditUserViewModel

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Edit User Details</h1>

    <form method="post" asp-controller="Admin" asp-action="Edit">
        @*<input asp-for="Id" hidden/>*@
        <div class="border p-2 rounded">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="UserName" class="form-control" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AadharNumber" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="AadharNumber" class="form-control" readonly />
                    <span asp-validation-for="AadharNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="DateOfBirth" />
            <input type="hidden" asp-for="AadharNumber" />
            
            <div class="form-group pt-3">

                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


