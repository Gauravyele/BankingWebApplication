@model List<ApplicationUser>

<h3>Bank Users List</h3>

<table>
    <thead>
        <tr>
            <th>Account Number</th>
            <th>User Name</th>
            <th>Date Of Birth</th>
            <th>Aadhar Number</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.UserName))
        {
            <tr>
                <td>@obj.AccountNumber</td>
                <td>@obj.UserName</td>
                <td>@obj.DateOfBirth.ToString("dd-MM-yyyy")</td> <!-- Format the date here -->
                <td>@obj.AadharNumber</td>
                <td>@obj.Email</td>
                <td>@obj.PhoneNumber</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Admin" asp-action="Edit" asp-route-userName="@obj.UserName" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>

                        <a asp-controller="Admin" asp-action="Delete" asp-route-userName="@obj.UserName" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>